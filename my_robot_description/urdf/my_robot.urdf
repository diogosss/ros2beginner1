<?xml version="1.0"?>
<robot name="my_robot">

    <material name="green">
        <color rgba="0.0 0.5 0.0 1.0"/>     
    </material>
    <material name="blue">
        <color rgba="0.0 0.0 0.5 1.0"/>     
    </material>
    <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>     
    </material>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.60 0.40 0.20"/>
            </geometry>
            <origin xyz="0.0 0.0 0.10" rpy="0.0 0.0 0.0"/>
            <material name="blue"/>
        </visual>
    </link>

    <link name="second_link">
        <visual>
            <geometry>
                <cylinder radius="0.10" length="0.20"/>                
            </geometry>
            <origin xyz="0.0 0.0 0.1" rpy="0 0 0"/>
            <material name="grey"/>
        </visual>
    </link>


    <link name="third_link">
        <visual>
            <geometry>
                <box size="0.20 0.20 0.20"/>
            </geometry>
            <origin xyz="0.0 0.0 0.1" rpy="0.0 0.0 0.0"/>
            <material name="green"/>
        </visual>
    </link>

    <joint name="base_second_joint" type="revolute">
        <parent link="base_link"/>
        <child link="second_link"/>        
        <origin xyz="0.0 0.0 0.2" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 0.0 1.0"/>
        <limit lower="-1.57" upper="1.57" effort="100.0" velocity="100.0"/>
    </joint>

    <joint name="second_third_joint" type="prismatic">
        <parent link="second_link"/>
        <child link="third_link"/>        
        <origin xyz="0.0 0.0 0.20" rpy="0.0 0.0 0.0"/>
        <axis xyz="1.0 0.0 0"/>
        <limit lower="0.0" upper="0.2" effort="100.0" velocity="100.0"/>
    </joint>
</robot>
